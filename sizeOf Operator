#include<stdio.h>


int main()
{
    printf("The Size of int : %zd bytes\n", sizeof(int));
    printf("The Size of char : %zd bytes\n", sizeof(char));
    printf("The Size of short : %zd bytes\n", sizeof(short));
    printf("The Size of long : %zd bytes\n", sizeof(long));
    printf("The Size of long long : %zd bytes\n", sizeof(long long));
    printf("The Size of double : %zd bytes\n", sizeof(double));
    printf("The Size of float : %zd bytes\n", sizeof(float));
    printf("The Size of long double : %zd bytes\n", sizeof(long double));

    return 0;

}
